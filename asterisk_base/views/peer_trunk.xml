<?xml version="1.0" encoding="utf-8"?>
<openerp><data>

    <record model="ir.ui.view" id="asterisk_sip_peer_trunk_list">
        <field name="name">asterisk sip peer trunks</field>
        <field name="model">asterisk.sip_peer</field>
        <field name="inherit_id" ref="asterisk_sip_peer_list"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
          <data>
            <field name="server" position="after">
              <field name="host"/>
            </field>
          </data>
        </field>
    </record>

    <record model="ir.ui.view" id="asterisk_sip_peer_trunk_form">
        <field name="name">asterisk sip peer trunk form</field>
        <field name="model">asterisk.sip_peer</field>
        <field name="inherit_id" ref="asterisk_sip_peer_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
          <data>
            <field name="peer_type" position="after">
              <notebook>
                <page string="Basic Settings">
                  <group>
                    <group string="Main">
                        <field name="host" required="1"/>
                        <field name="secret" required="1"/>
                        <field name="context" required="True"/>
                        <field name="insecure"/>
                        <field name="fromdomain"/>
                        <field name="fromuser"/>
                        <field name="defaultuser"/>
                        <field name="callbackextension"/>
                        <field name="callcounter"/>
                        <field name="outboundproxy"/>
                        <field name="busylevel"/>
                        <field name="deny"/>
                        <field name="permit"/>
                        <field name="trustrpid"/>
                        <field name="remotesecret"/>
                        <field name="parkinglot"/>
                    </group>
                    <group string="Media">
                      <field name="dtmfmode"/>
                      <field name="allow"/>
                      <field name="disallow"/>
                      <field name="nat"/>
                      <field name="qualify"/>
                      <field name="qualifyfreq"/>
                      <field name="directmedia"/>
                      <field name="videosupport"/>
                      <field name="maxcallbitrate"/>
                      <field name="rtpkeepalive"/>
                    </group>
                  </group>
                </page>
                <page string="Advanced Settings">
                  <group>
                    <group>
                      <field name="setvar"/>
                      <field name="amaflags"/>
                      <field name="canreinvite"/>
                      <field name="rtptimeout"/>
                      <field name="rtpholdtimeout"/>
                      <field name="language"/>
                      <field name="transport"/>
                      <field name="progressinband"/>
                      <field name="promiscredir"/>
                      <field name="allowoverlap"/>
                      <field name="allowsubscribe"/>
                      <field name="rfc2833compensate"/>
                      <field name="t38pt_usertpsource"/>
                      <field name="defaultip"/>
                      <field name="sendrpid"/>
                      <field name="timert1"/>
                      <field name="timerb"/>
                      <field name="usereqphone"/>
                      <field name="textsupport"/>
                      <field name="faxdetect"/>
                      <field name="callingpres"/>
                      <field name="mohinterpret"/>
                      <field name="mohsuggest"/>
                      <field name="autoframing"/>
                      <field name="ignoresdpversion"/>
                      <field name="allowtransfer"/>
                      <field name="supportpath"/>
                    </group>
                  </group>
                </page>
              </notebook>
            </field>
          </data>
        </field>
    </record>


    <record model="ir.actions.act_window" id="asterisk_sip_peer_trunk_action">
        <field name="name">Trunks</field>
        <field name="res_model">asterisk.sip_peer</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
          (0, 0, {'view_mode': 'tree', 'view_id': ref('asterisk_sip_peer_trunk_list')}),
          (0, 0, {'view_mode': 'form', 'view_id': ref('asterisk_sip_peer_trunk_form')})]"/>
        <field name="domain">[('peer_type', '=', 'trunk')]</field>
        <field name="context">{
            'default_peer_type': 'trunk',
            'default_type': 'friend',
            'default_context': 'odoo-incoming',
            }
        </field>
    </record>

    <menuitem name="Trunks" parent="asterisk_sip_peers_menu" sequence="30"
              action="asterisk_sip_peer_trunk_action" id="asterisk_sip_peer_trunk_menu"/>


</data></openerp>
